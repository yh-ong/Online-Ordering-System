@page
@model Online_Ordering_System.Pages.AdminPages.ProductList.CreateModel
@{
    ViewData["title"] = "Add Product";
}

<div class="col-md-12">
    <form method="post" enctype="multipart/form-data">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>

        <div class="form-group row">
            <label asp-for="Products.Name" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-6">
                <input asp-for="Products.Name" class="form-control" />
                <span asp-validation-for="Products.Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Products.Description" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-6">
                <textarea asp-for="Products.Description" class="form-control"></textarea>
                <span asp-validation-for="Products.Description" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-3 col-form-label">Category</label>
            <div class="col-sm-6">
                <select asp-for="Products.CategoryID" asp-items="Model.Options" class="form-control"></select>
                <span asp-validation-for="Products.CategoryID" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Products.QtyInStock" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-4">
                <input asp-for="Products.QtyInStock" class="form-control" />
            </div>
            <div class="col-sm-2">
                @*<select id="" class="form-control">
                    <option selected>Choose</option>
                    <option value="unit">Unit</option>
                    <option value="kg">KG</option>
                </select>*@
                <span asp-validation-for="Products.QtyInStock" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Products.Price" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-6">
                <input asp-for="Products.Price" class="form-control" />
                <span asp-validation-for="Products.Price" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Products.Image" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-6">
                <div class="custom-file">
                    <input asp-for="ProductImage" type="file" class="custom-file-input">
                    <label class="custom-file-label text-left">Choose file</label>
                </div>
                <span asp-validation-for="ProductImage" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-3 col-form-label">Preview</label>
            <div class="col-sm-6 mx-auto">
                <img src="~/img/empty-image.jpg" alt="" id="previewImg" width="200"/>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Add" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-secondary form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>
