@page
@model Online_Ordering_System.Pages.AdminPages.ProductList.CreateModel
@{
    Layout = "_SellerLayout";
    ViewData["title"] = "Add Product";
}

<div class="col-md-12">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Products.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Products.Name" class="form-control" />
            </div>
            <span asp-validation-for="Products.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Products.Description"></label>
            </div>
            <div class="col-6">
                <input asp-for="Products.Description" class="form-control" />
            </div>
            <span asp-validation-for="Products.Description" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Products.QtyInStock"></label>
            </div>
            <div class="col-6">
                <input asp-for="Products.QtyInStock" class="form-control" />
            </div>
            <span asp-validation-for="Products.QtyInStock" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Products.Price"></label>
            </div>
            <div class="col-6">
                <input asp-for="Products.Price" class="form-control" />
            </div>
            <span asp-validation-for="Products.Price" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Create" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>
