@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="banner-container">
    <div class="container banner-text">
        <h1 class="banner-title">@Model.BannerTitle</h1>
        <p class="banner-desc">Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    </div>
</div>

<section id="categories" class="container">
    <div class="section-desc slideanim">
        <h2>Categories</h2>
        <p>Sapien elit in malesuada semper mi, id sollicitudin urna fermentum.</p>
    </div>
    <div class="row text-center">
        @foreach (var item in Model.Categories)
        {
            var imgURL = "https://img.icons8.com/cute-clipart/64/000000/"+item.Icon+".png";
            <div class="col-3 slideanim">
                <a href="#">
                    <div class="card">
                        <div class="card-body">
                            <img src="@imgURL" />
                            <h5>@Html.DisplayFor(m => item.Name)</h5>
                        </div>
                    </div>
                </a>
            </div>
        }
        
        <div class="col-3 slideanim">
            <a asp-area="" asp-page="/List">
                <div class="card">
                    <div class="card-body">
                        <img src="https://img.icons8.com/cute-clipart/64/000000/search.png" />
                        <h5>See More</h5>
                    </div>
                </div>
            </a>
        </div>
    </div>
</section>

