@page
@model Online_Ordering_System.Pages.SignUpModel
@{
    Layout = "_SignLayout";
    ViewData["title"] = "Register";
}

<div class="container">
    <div class="row login-wrap">
        <div class="col-md-6">
            <h1>@ViewData["title"]</h1>
        </div>
        <div class="col-md-6">
            <div class="card login-card">
                <div class="card-body">
                    <form method="post">
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        <div class="form-row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Users.FirstName"></label>
                                <input asp-for="Users.FirstName" type="text" class="form-control" id="inputFirstname" placeholder="Enter Firstname">
                                <span asp-validation-for="Users.FirstName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Users.LastName"></label>
                                <input asp-for="Users.LastName" type="text" class="form-control" id="inputLastname" placeholder="Enter Lastname">
                                <span asp-validation-for="Users.LastName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Users.Email"></label>
                            <input asp-for="Users.Email" type="email" class="form-control" id="inputEmail" placeholder="Enter Email">
                            <span asp-validation-for="Users.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Users.PhoneNumber"></label>
                            <input asp-for="Users.PhoneNumber" type="email" class="form-control" id="inputPhoneNumber" placeholder="Enter Contact Number">
                            <span asp-validation-for="Users.PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Users.Password"></label>
                            <input asp-for="Users.Password" type="password" class="form-control" id="inputPassword" placeholder="Enter Password">
                            <span asp-validation-for="Users.Password" class="text-danger"></span>
                        </div>
                        <div class="form-row">
                            <label asp-for="Input.ConfirmPassword"></label>
                            <input asp-for="Input.ConfirmPassword" type="password" class="form-control" id="inputPassword" placeholder="Enter Confirm Password">
                            <span asp-validation-for="@Model.ErrorMessage" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block mt-4">Register</button>

                        <div class="text-center mt-3">
                            Already have an account? <a asp-page="/SignIn">Sign In</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>