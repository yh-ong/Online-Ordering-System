<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Online_Ordering_System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/main.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow header-navbar">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-page="/Seller/Dashboard">Online Ordering System</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/AdminPages/Dashboard">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="ProductList/Index">Product</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="OrderList/Index">Order</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="FinanceList/Index">Finance</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/AdminPages/Login" title="Notification"><i class="far fa-bell"></i></a>
                        </li>
                    </ul>
                    <div class="dropdown">
                        <button class="btn btn-outline-primary btn-sm ml-3 px-3" data-toggle="dropdown">Username</button>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="#">Action</a>
                            <a class="dropdown-item" asp-area="" asp-page="Profile">Edit Profile</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" asp-area="" asp-page="/SignOut">Log Out</a>
                        </div>
                    </div>
                    <a class="btn btn-link btn-sm text-dark ml-1" asp-area="" asp-page="/Index">Return to Buyer</a>
                </div>
            </div>
        </nav>
    </header>

    <div class="content-wrap">
        @*<div class="side-navbar box-shadow">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link"><i class="fas fa-shopping-basket"></i>Order</a>
                    <ul class="inner-navbar-nav">
                        <li><a asp-area="" asp-page="/">My Orders</a></li>
                        <li><a asp-area="" asp-page="/">Ship Order</a></li>
                        <li><a asp-area="" asp-page="/">Return/Refund</a></li>
                    </ul>
                </li>
                <li class="nav-item">
                    <a class="nav-link"><i class="fas fa-shopping-bag"></i>Product</a>
                    <ul class="inner-navbar-nav">
                        <li><a asp-area="" asp-page="/AdminPages/ProductList/Index">My Products</a></li>
                        <li><a asp-area="" asp-page="/">Add New Product</a></li>
                        <li><a asp-area="" asp-page="/">Banned Products</a></li>
                    </ul>
                </li>
                <li class="nav-item">
                    <a class="nav-link"><i class="fas fa-piggy-bank"></i>Finance</a>
                    <ul class="inner-navbar-nav">
                        <li><a asp-area="" asp-page="/">My Income</a></li>
                        <li><a asp-area="" asp-page="/">My Balance</a></li>
                        <li><a asp-area="" asp-page="/">Bank Accounts</a></li>
                    </ul>
                </li>
                <li class="nav-item">
                    <a class="nav-link"><i class="fas fa-chart-line"></i>Data</a>
                    <ul class="inner-navbar-nav">
                        <li><a asp-area="" asp-page="/">My Data</a></li>
                    </ul>
                </li>
            </ul>
        </div>*@
        <main role="main" class="main-content">
            <div class="container">
                <div class="row">
                    @RenderBody()
                </div>
            </div>
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
