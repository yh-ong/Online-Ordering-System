<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Online_Ordering_System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/main.css" />
</head>
<body>
    <div>
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="container">
            <div class="row footer-top">
                <div class="col-3">
                    <a asp-area="" asp-page="/Index">
                        <h3>Order</h3>
                    </a>
                </div>
                <div class="col-2">
                    <h6>Learn More</h6>
                    <ul>
                        <li>About</li>
                        <li>Delivery</li>
                        <li>Privacy</li>
                    </ul>
                </div>
                <div class="col-2">
                    <h6>Add-ons</h6>
                    <ul>
                        <li>About</li>
                        <li>Delivery</li>
                        <li>Privacy</li>
                    </ul>
                </div>
                <div class="col-2">
                    <h6>Comapny</h6>
                    <ul>
                        <li>About</li>
                        <li>Delivery</li>
                        <li>Privacy</li>
                    </ul>
                </div>
                <div class="col-2">
                    <h6>Legal</h6>
                    <ul>
                        <li>About</li>
                        <li>Delivery</li>
                        <li>Privacy</li>
                    </ul>
                </div>
            </div>
            <hr />
            &copy; @DateTime.Now.Year.ToString() - Order - <a asp-area="" asp-page="/Privacy">About</a> - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
